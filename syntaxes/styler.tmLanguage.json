{
  "scopeName": "source.styler",
  "name": "Styler",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#property"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": "//.*$",
          "name": "comment.line.double-slash"
        }
      ]
    },
    "property": {
      "patterns": [
        {
          "begin": "(?:^|\\G)[ \\t]*([^:\\n]+?)[ \\t]*(:)[ \\t]*",
          "beginCaptures": {
            "1": {
              "name": "entity.name.tag"
            },
            "2": {
              "name": "punctuation.separator.key-value"
            }
          },
          "end": "(?=$|\\n)",
          "patterns": [
            {
              "include": "#value"
            }
          ]
        },
        {
          "begin": "^([ \\t]+)(-)[ \\t]*",
          "beginCaptures": {
            "2": {
              "name": "keyword.operator.array"
            }
          },
          "end": "(?=$|\\n)",
          "patterns": [
            {
              "include": "#value"
            }
          ]
        }
      ]
    },
    "value": {
      "patterns": [
        {
          "begin": "([\\w-]+)(\\()",
          "end": "\\)",
          "beginCaptures": {
            "1": { "name": "support.function.misc" },
            "2": { "name": "punctuation.section.function" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.section.function" }
          },
          "patterns": [
            {
              "match": "/",
              "name": "keyword.operator.arithmetic"
            },
            {
              "match": "(\\d*\\.)?\\d+(rem|px|em|%|vh|vw|vmin|vmax|ch|ex|pt|pc|cm|mm|in)\\b",
              "name": "constant.numeric"
            },
            {
              "match": "\\d+(\\.\\d+)?",
              "name": "constant.numeric"
            },
            {
              "match": "#[0-9a-fA-F]{3}(?:[0-9a-fA-F]|[0-9a-fA-F]{3}|[0-9a-fA-F]{5})\\b",
              "name": "constant.other.color.rgb-value"
            },
            {
              "match": "[^\\s,()]+",
              "name": "string.unquoted"
            }
          ]
        },
        {
          "match": "#[0-9a-fA-F]{3}(?:[0-9a-fA-F]|[0-9a-fA-F]{3}|[0-9a-fA-F]{5})\\b",
          "name": "constant.other.color.rgb-value"
        },
        {
          "match": "[+-]?(\\d*\\.)?\\d+(rem|px|em|%|vh|vw|vmin|vmax|ch|ex|pt|pc|cm|mm|in)\\b",
          "name": "constant.numeric"
        },
        {
          "match": "[+-]?\\d+(\\.\\d+)?",
          "name": "constant.numeric"
        },
        {
          "match": "\\b(true|false)\\b",
          "name": "constant.language.boolean"
        },
        {
          "match": "\\bnull\\b",
          "name": "constant.language.null"
        },
        {
          "match": "[^\\s,]+",
          "name": "string.unquoted"
        }
      ]
    }
  }
}